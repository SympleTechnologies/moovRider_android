                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_search" />

                            <com.moovapp.riderapp.utils.placesAutocomplete.CustomAutoCompleteTextView
